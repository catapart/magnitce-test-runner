{
  "name": "@magnit-ce/test-runner",
  "version": "0.0.0",
  "description": "A custom HTMLElement that manages and runs code-test elements",
  "type": "module",
  "main": "dist/test-runner.js",
  "module": "dist/test-runner.mjs",
  "types": "dist/test-runner.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/test-runner.ts --format cjs,esm --dts --clean",
    "minify": "tsup src/test-runner.ts --format esm --config ./tsup.config.min.ts --outDir ./dist --minify",
    "copyToDemo": "node -e \"const fs = require('fs'); fs.cpSync('dist', 'demo/dist', {recursive: true});\"",
    "lint": "tsup src/test-runner.ts --format esm --tsconfig ./tsconfig.lint.json",
    "package": "npm run build && npm run minify && npm run copyToDemo",
    "release": "npm run package && changeset publish"
  },
  "keywords": [
    "custom",
    "element",
    "html",
    "browser",
    "test",
    "unit",
    "functional",
    "automated",
    "esm"
  ],
  "author": "catapart",
  "license": "CC0-1.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/catapart/magnitce-test-runner"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.7",
    "changesets": "^1.0.2",
    "minify": "^11.4.0",
    "terser": "^5.31.3",
    "tsup": "^8.2.0",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@magnit-ce/code-tests": "^0.0.10",
    "ce-part-utils": "^0.0.0"
  }
}
